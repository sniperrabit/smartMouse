<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_weight="0.17" >

        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1.55"
            android:text="MOUSE LEFT" />

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1.56"
            android:text="MOUSE RIGHT" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="match_parent"
        android:layout_height="238dp"
        android:layout_weight="0.24" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentTop="true"
            android:layout_weight="1.58" />     

        <Button
            android:id="@+id/butCalibration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:visibility="gone"
            android:layout_weight="0.11"
            android:text="Calibration" />

        <CheckBox
            android:id="@+id/checkboxSensorPause"
         	android:layout_width="wrap_content"
          	android:layout_height="wrap_content"
            android:layout_above="@+id/butCalibration"
             android:visibility="gone"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="33dp"
            android:text="Pause"
             android:onClick="pauseSensor" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" 
        >

        <Button
            android:id="@+id/butEsc"
            android:layout_width="64dp"
            android:layout_height="50dp"
            android:text="Esc" />

        <Button
            android:id="@+id/butUpArrow"
            android:layout_width="64dp"
            android:layout_height="50dp"
            android:text="^" />

        <Button
            android:id="@+id/butDelete"
            android:layout_width="64dp"
            android:layout_height="50dp"
            android:text="DEL" />

        <Button
            android:id="@+id/butEnter"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:text="Enter" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" 
		>

        <Button
            android:id="@+id/butLeftArrow"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:minWidth="64dp"
            android:text="&lt;--" />

        <Button
            android:id="@+id/butDownArrow"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
              android:minWidth="64dp"
            android:text="v" />

        <Button
            android:id="@+id/butRightArrow"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
             android:minWidth="64dp"
            android:text="-->" />

        <Button
            android:id="@+id/btSpeak"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:onClick="speak"
            android:text="Voice"
           
            android:textSize="14dp" /> />

        <Button
            android:id="@+id/btSpeakLoop"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:onClick="speak"
            android:text="Voice Loop"
            
            android:textSize="14dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/edit_text_out"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="1" 
            android:hint="Text or use voice ->"/>

        <Button
            android:id="@+id/button_send"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="2.33"
            android:text="Send" />
        
    </LinearLayout>

</LinearLayout>

